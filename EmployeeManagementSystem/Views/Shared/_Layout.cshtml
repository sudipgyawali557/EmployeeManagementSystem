<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/EmployeeManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg nav_header position-sticky">
  <div class="container-fluid align-items-center d-flex justify-content-lg-between">
      <div class="d-flex align-items-center justify-content-between">
          <div class="d-flex align-items-center">
      <img src='~/img/employee.png' class="logo"/>
    <a class="navbar-brand text-white px-2 fs-6" href="#">Employee Management System</a>
    </div>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa fa-bars arial-hidden="true""></i>
    </button>
    </div>
    <div class="collapse navbar-collapse d-lg-flex justify-content-lg-end" id="navbarSupportedContent">
 <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item px-2">
          <a class="nav-link active text-white" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item px-2">
          <a class="nav-link text-white" href="#aboutus">About</a>
        </li>
          <li class="nav-item px-2">
          <a class="nav-link text-white" href="#features">Features</a>
        </li>
           <li class="nav-item px-2">
          <a class="nav-link text-white" href="#contactus">Contact Us</a>
        </li>
      </ul>
        <div>
        <a type="button" class="btn btn-secondary" asp-action="Login" asp-controller="Auth">Login</a>
        </div>
    </div>
  </div>
</nav>
    </header>
    <div class="px-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="text-break px-2">
            © Copyright 2022. All Rights Reserved
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
